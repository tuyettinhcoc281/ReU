<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ExchangeWebsite</title>
    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    </environment>
    <!-- CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ExchangeWebsite.styles.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)

    <style>
        header .navbar {
            background-color: #f0f5ff;
            border: none;
            border-radius: 10px;
            margin: 10px 0;
            padding: 15px 20px;
        }

        header .navbar-brand {
            color: #0056b3;
            font-weight: bold;
        }

        header .nav-link {
            color: #666;
        }

            header .nav-link:hover {
                color: #0056b3;
            }

        footer {
            background-color: #f0f5ff;
            border-top: none;
            border-radius: 10px 10px 0 0;
            margin-top: 20px;
            padding: 20px 0;
        }

            footer a {
                color: #0056b3;
            }

                footer a:hover {
                    color: #003d82;
                }

        .custom-toast {
            position: fixed;
            top: 32px;
            right: 32px;
            z-index: 9999;
            background: #28a745;
            color: #fff;
            padding: 18px 32px;
            border-radius: 8px;
            font-size: 1.1rem;
            font-weight: 600;
            box-shadow: 0 4px 18px rgba(40,167,69,0.15);
            animation: fadeIn 0.5s;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
    <script src="https://cdn.payos.vn/payos-checkout/v1/stable/payos-initialize.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const btn = document.getElementById('subscribeVipNav');
            if (btn) {
                btn.addEventListener('click', async function(e) {
                    e.preventDefault();
                    const response = await fetch('/api/PayOS/create-payment-link', { method: 'POST' });
                    if (!response.ok) {
                        const errorText = await response.text();
                        alert('Không thể tạo link thanh toán.\n' + errorText);
                        return;
                    }
                    const data = await response.json();
                    window.location.href = data.checkoutUrl;
                });
            }
        });
    </script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var notificationDropdown = document.getElementById('notificationDropdown');
            if (notificationDropdown) {
                notificationDropdown.addEventListener('show.bs.dropdown', function () {
                    fetch('/Notification/MarkAllAsRead', {
                        method: 'POST',
                        headers: {
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                        }
                    }).then(function (response) {
                        if (response.ok) {
                            // Ẩn badge số thông báo
                            var badge = notificationDropdown.querySelector('.badge');
                            if (badge) badge.style.display = 'none';
                        }
                    });
                });
            }
        });
    </script>
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-81Y6L84MTD"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-81Y6L84MTD', {
        'page_title': 'Trang chủ',
        'page_location': 'https://reusevn.onrender.com/',
        'send_page_view': true
      });
    </script>
</head>
<body class="d-flex flex-column min-vh-100">

    @using Microsoft.AspNetCore.Identity
    @using ExchangeWebsite.Models
    @using ExchangeWebsite.Controllers
    @inject UserManager<User> UserManager
    @inject ExchangeWebsiteContext DbContext

    @{
        var userId = User.Identity.IsAuthenticated ? UserManager.GetUserId(User) : null;
        var notifications = userId != null
        ? DbContext.Notifications
        .Where(n => n.UserId == userId && !n.IsRead)
        .OrderByDescending(n => n.CreatedAt)
        .Take(10)
        .ToList()
        : new List<Notification>();
    }

    <!-- Header -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/uploads/img/b30a0b221b29ad77f438-Photoroom.png" alt="Logo" style="height:40px;object-fit:contain;" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Chuyển đổi menu">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Trang chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Admin" asp-action="Announcements">Thông Báo</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Chính sách</a>
                        </li>
                        
                        @if (User.Identity.IsAuthenticated)
                        {
                            var currentUser = await UserManager.GetUserAsync(User);
                            if (currentUser != null)
                            {
                                var isAdmin = await UserManager.IsInRoleAsync(currentUser, "Admin");
                                if (isAdmin)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-danger" asp-controller="Admin" asp-action="Index">Quản trị</a>
                                    </li>
                                }
                                var isShipper = await UserManager.IsInRoleAsync(currentUser, "Shipper");
                                if (isShipper)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="Shipping" asp-action="Index">
                                             Giao hàng
                                        </a>
                                    </li>
                                }
                                if (!isAdmin && !isShipper)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="OrderTracking" asp-action="Index">
                                            Theo dõi đơn hàng
                                        </a>
                                    </li>
                                }
                            }
                        }
                    </ul>

                    <!-- Search Bar -->
                    <form class="d-flex me-2" method="get" asp-controller="Category" asp-action="Search">
                        <input class="form-control me-2" type="search" name="q" placeholder="Tìm kiếm tin..." aria-label="Tìm kiếm" />
                        <button class="btn btn-outline-success" type="submit">Tìm kiếm</button>
                    </form>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="dropdown d-inline-block me-2">
                            <button class="btn btn-warning dropdown-toggle"
                                    type="button"
                                    id="notificationDropdown"
                                    data-bs-toggle="dropdown"
                                    aria-expanded="false">
                                Thông báo
                                @if (notifications.Count > 0)
                                {
                                    <span class="badge bg-danger">@notifications.Count</span>
                                }
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="notificationDropdown">
                                @if (notifications.Any())
                                {
                                    @foreach (var n in notifications)
                                    {
                                        <li>
                                            <a class="dropdown-item" href="@n.Link">@n.Message</a>
                                        </li>
                                    }
                                }
                                else
                                {
                                    <li><span class="dropdown-item text-muted">Không có thông báo mới</span></li>
                                }
                            </ul>
                        </div>
                    }

                    <!-- User Info / Login Partial -->
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <div class="container my-4 flex-grow-1">
        <main role="main">
            @RenderBody()
            @if (TempData["SuccessMessage"] != null)
            {
                <div id="success-toast" class="custom-toast">
                    <span>@TempData["SuccessMessage"]</span>
                </div>
                <script>
                    setTimeout(function() {
                        var toast = document.getElementById('success-toast');
                        if (toast) toast.style.display = 'none';
                    }, 3000);
                </script>
            }
        </main>
    </div>

    <!-- Footer -->
    <footer class="footer mt-auto py-3 text-muted">
        <div class="container text-center">
            <div class="row align-items-center">
                <div class="col-md-6 mb-2 mb-md-0">
                    © ExchangeWebsite - Dev by Vu Bao/Persja
                </div>
                <div class="col-md-6">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="mx-2">Trang chủ</a>
                    <a asp-area="" asp-controller="Home" asp-action="About" class="mx-2">Về chúng tôi</a>
                    <a asp-area="" asp-controller="Home" asp-action="Privacy" class="mx-2">Chính sách</a>
                    <a href="https://www.facebook.com/perushiaa" target="_blank" rel="noopener">Liên Hệ</a>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.payos.vn/payos-checkout/v1/stable/payos-initialize.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <form id="antiforgery-form" style="display:none;">
        @Html.AntiForgeryToken()
    </form>
</body>
</html>