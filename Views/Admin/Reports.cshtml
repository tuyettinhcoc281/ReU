@model IEnumerable<ExchangeWebsite.Models.Report>
@{
    ViewData["Title"] = "Bài viết bị báo cáo";
}
<h2>Bài viết bị báo cáo</h2>
<table class="table">
    <thead>
        <tr>
            <th>Bài viết</th>
            <th>Người báo cáo</th>
            <th>Lý do</th>
            <th>Thời gian báo cáo</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var report in Model)
        {
            <tr>
                <td>
                    <a asp-controller="Category" asp-action="Post" asp-route-id="@report.PostId">
                        @report.Post?.Title
                    </a>
                </td>
                <td>@report.Reporter?.UserName</td>
                <td>@report.Description</td>
                <td>@report.CreatedAt.ToString("g")</td>
                <td>
                    <a asp-controller="Category" asp-action="Post" asp-route-id="@report.PostId" class="btn btn-sm btn-info">Xem bài viết</a>
                </td>
            </tr>
        }
    </tbody>
</table>
